---
import IconRef from "./IconRef.astro";

interface Props {
  title: string;
  dateRange: string;
  link?: string;
}

const { title, dateRange, link } = Astro.props as Props;
---

<div class="md:border-b">
  <div
    class="relative flex flex-col space-y-1 md:flex-row md:items-end md:justify-between"
  >
    <div class="flex items-center space-x-2">
      {
        link ? (
          <IconRef
            name="vscode-icons:folder-type-github-opened"
            link={link}
            width="35"
          />
        ) : (
          <div class="relative group transition-all ease-in-out hover:scale-105">
          <IconRef name="fluent:folder-prohibited-28-filled" width="30" link="/restricted"/>
          <div class="absolute top-0 left-0 w-44 bg-slate-950 translate-y-10 p-1 rounded-md hidden group-hover:block opacity-85">
            public access restricted
          </div>
          </div>
        )
      }
      <span class="text-2xl">{title}</span>
    </div>
    <span class="text-lg italic">
      {dateRange}
    </span>
  </div>
</div>
