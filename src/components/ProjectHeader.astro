---
import Icon from "astro-iconify";

interface Props {
  title: string;
  dateRange: string;
  link?: string;
  skills?: string;
}

let { title, dateRange, link, skills } = Astro.props as Props;
---

<div>

  <div class="md:border-b md:pb-1">
    <div
      class="relative flex flex-col space-y-1 md:flex-row md:items-end md:justify-between"
    >
      <a href={link ? link : "/restricted"} target={link ? "_blank" : "_self"}>
        <div
          class={`flex items-center space-x-2 ${link ? "hover:scale-110 transition-all ease-in-out" : "hover:cursor-not-allowed"}`}
        >
          <div class="mb-1 flex space-x-2">
            {
              link ? (
                <Icon name="vscode-icons:folder-type-github-opened" width="35" />
              ) : (
                <div class="group relative">
                  <Icon name="fluent:folder-prohibited-28-filled" width="30" />
                </div>
              )
            }
          <span class={`text-2xl ${link ? "hover:text-blue-500" : ""}`}
            >{title}</span
          >
          </div>
        </div>
      </a>
      <span class="text-lg italic">
        {dateRange}
      </span>
    </div>
  </div>
  {
    skills ? (
      <div class="mt-2">
        [&nbsp;<span class="text-lg">
          {skills}
        </span>&nbsp;]
      </div>
    ) : null
  }
</div>
