---
interface Props {
  title: string;
  dateRange: string;
}

const { title, dateRange } = Astro.props as Props;
---

<div class="relative flex flex-col gap-2 lg:flex-row lg:justify-between">
  <div>
    <span class="text-2xl">{title}</span>
  </div>
  <span class="text-xl italic">
    {dateRange}
  </span>
</div>
