---
import "../styles/global.css";
import NavMenu from "../components/NavMenu.astro";
import Hamburger from "../components/Hamburger.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  section: string;
  heading?: string;
}

const { title, section, heading } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="flex min-h-screen flex-col">
    <!-- Hamburger Menu -->
    <div class="block focus:outline-none md:hidden">
      <Hamburger section={section} />
    </div>
    <!-- Main Content -->
    <main class="flex flex-grow justify-center">
      <div class="mt-10 w-full xl:w-2/3">
        <div class="flex flex-grow flex-col justify-center md:flex-row">
          <div class="ml-4 min-w-fit">
            <div class="text-center text-4xl hover:underline">
              <a href="/">John Zeng</a>
            </div>
            <div class="mr-5 mt-10 hidden md:block">
              <NavMenu section={section} />
            </div>
          </div>
          <div class="w-full md:ml-10">
            <div
              class="ml-5 mt-16 text-left underline underline-offset-4 md:text-center md:no-underline"
            >
              <h1 class="text-3xl">
                {heading ? heading : section}
              </h1>
            </div>
            <div class="p-5">
              <slot />
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- Footer -->
    <footer class="text-center">
      Â© 2024 John Zeng
      <a href="https://github.com/JLZ22/website" class="hyperlink">Source</a>
    </footer>
  </body>
</html>
