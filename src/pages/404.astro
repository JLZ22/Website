---
import { Image } from "astro:assets";
import notFoundVisual from "@resources/images/404.svg";
import CenteredNoticeLayout from "@layouts/CenteredNoticeLayout.astro";
const sections = [
  { title: "About", href: "/", target: "_self" },
  { title: "Research", href: "/research", target: "_self" },
  { title: "Side Projects", href: "/projects", target: "_self" },
];
---

<CenteredNoticeLayout> 
  <Image src={notFoundVisual} alt="404 Not Found" width="250" />
        <span class="text-2xl">Seems like you're lost!</span>
        <div class="p-4">
          <span class="text-sm">Here are some helpful links.</span>
          <div class="mt-2 flex flex-row justify-center space-x-5">
            {
              sections.map(({ title, href, target }) => {
                return (
                  <a href={href} class="hyperlink" target={target}>
                    {title}
                  </a>
                );
              })
            }
          </div>
</CenteredNoticeLayout>